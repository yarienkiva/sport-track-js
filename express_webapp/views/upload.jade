extends layout

block content
	link(rel='stylesheet' href='css/uploadform.css')
	script(src='js/uploadform.js')
	
	h3 Upload Sport Activity

	if error
		pre
			div.alert.alert-danger(role="alert") #{error}

	form(action='' method='POST' enctype='multipart/form-data')
		input(type='file' name='activity' onchange='changeform(this);')
		p#formText Drag your JSON files here or click in this area.
		button(type='submit') Upload